# =============================================================================
# LA Land Wholesale - Environment Variables Template
# Copy this to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Railway PostgreSQL)
# -----------------------------------------------------------------------------
# Railway will auto-inject this when you add PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/la_land_wholesale

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DRY_RUN=true  # Set to false to enable real SMS/actions

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# OpenAI (for GPT-4o-mini lead scoring and analysis)
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic Claude (optional - for alternative LLM)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# -----------------------------------------------------------------------------
# Twilio SMS (for outreach)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_PHONE_NUMBER=+15551234567

# -----------------------------------------------------------------------------
# USPS Address Verification
# -----------------------------------------------------------------------------
USPS_USER_ID=your-usps-crid-here

# -----------------------------------------------------------------------------
# Google Maps (for geocoding and map embeds)
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Security & CORS (Optional)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT Secret (if implementing authentication later)
# JWT_SECRET=your-super-secret-jwt-key

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable specific features
# ENABLE_TWILIO=true
# ENABLE_OPENAI=true
# ENABLE_USPS=true

# -----------------------------------------------------------------------------
# Frontend Environment Variables
# -----------------------------------------------------------------------------
# These should be set in Railway with VITE_ prefix
# VITE_API_BASE_URL=https://your-app.railway.app
# VITE_GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
