# =============================================================================
# LA Land Wholesale - Environment Variables Template
# Copy this to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Railway PostgreSQL)
# -----------------------------------------------------------------------------
# Railway will auto-inject this when you add PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/la_land_wholesale

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DRY_RUN=true  # Set to false to enable real SMS/actions

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
# OpenAI (for GPT-4o-mini lead scoring and analysis)
OPENAI_API_KEY=sk-proj-your-key-here

# Anthropic Claude (optional - for alternative LLM)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# -----------------------------------------------------------------------------
# Twilio SMS (for outreach)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token-here
TWILIO_PHONE_NUMBER=+15551234567

# -----------------------------------------------------------------------------
# USPS Address Verification
# -----------------------------------------------------------------------------
USPS_USER_ID=your-usps-crid-here

# -----------------------------------------------------------------------------
# Google Maps (for geocoding and map embeds)
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# JWT secret key â€” MUST be changed in production (min 32 chars)
JWT_SECRET_KEY=change-me-in-production-use-a-random-64-char-string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Allowed base directory for file ingestion (path traversal prevention)
# INGESTION_DATA_DIR=/app/data/ingestion

# Comps data provider: manual (default), attom
COMPS_PROVIDER=manual
# COMPS_API_KEY=your-attom-api-key-here

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable specific features
# ENABLE_TWILIO=true
# ENABLE_OPENAI=true
# ENABLE_USPS=true

# -----------------------------------------------------------------------------
# Frontend Environment Variables
# -----------------------------------------------------------------------------
# These should be set in Railway with VITE_ prefix
# VITE_API_BASE_URL=https://your-app.railway.app
# VITE_GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
