# =============================================================================
# LA Land Wholesale Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
POSTGRES_DB=la_land
POSTGRES_USER=la_land
POSTGRES_PASSWORD=<your-secure-password-here>
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://la_land:<your-secure-password-here>@localhost:5432/la_land

# -----------------------------------------------------------------------------
# Twilio Configuration (Required for SMS)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=<your-twilio-account-sid>
TWILIO_AUTH_TOKEN=<your-twilio-auth-token>
TWILIO_FROM_NUMBER=<your-twilio-phone-number>
TWILIO_MESSAGING_SERVICE_SID=<your-messaging-service-sid>

# Twilio Rate Limiting
TWILIO_MAX_MESSAGES_PER_SECOND=1

# -----------------------------------------------------------------------------
# OpenAI Configuration (Required for LLM features)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=<your-openai-api-key>
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT_SECONDS=30
OPENAI_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Outreach & Scoring Settings
# -----------------------------------------------------------------------------
MAX_SMS_PER_DAY=50
MIN_MOTIVATION_SCORE=60
OUTREACH_COOLDOWN_DAYS=4

# Scoring Weights (0-100 scale contributions)
SCORE_WEIGHT_ADJUDICATED=40
SCORE_WEIGHT_TAX_DELINQUENT_PER_YEAR=5
SCORE_WEIGHT_TAX_DELINQUENT_MAX=20
SCORE_WEIGHT_LOW_IMPROVEMENT=20
SCORE_WEIGHT_ABSENTEE=10
SCORE_WEIGHT_LOT_SIZE=10

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DRY_RUN=true
LOG_LEVEL=INFO
ENVIRONMENT=local
DEFAULT_PARISH=East Baton Rouge
SMS_BATCH_SIZE=25
STREAMLIT_PORT=8501

# -----------------------------------------------------------------------------
# Connection Pool Settings
# -----------------------------------------------------------------------------
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
